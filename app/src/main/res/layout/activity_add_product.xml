<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5">

    <!-- Header -->
    <include
        android:id="@+id/header"
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"

        android:clipToPadding="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"

              >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#F0F2F5">

                    <!-- Product Name & Price in one row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="12dp">

                        <!-- Product Name -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product Name"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="4dp"/>

                            <EditText
                                android:id="@+id/edtProductName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:padding="12dp"
                                android:background="@drawable/rounded_edittext"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                        <!-- Product Price -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Product Price"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="4dp"/>

                            <EditText
                                android:id="@+id/edtProductPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:padding="12dp"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_edittext"/>
                        </LinearLayout>
                    </LinearLayout>


                    <!-- Category & Unit in one row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="12dp">

                        <!-- Category Spinner -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Category"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="4dp"/>

                            <Spinner
                                android:id="@+id/spCat"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:entries="@array/product_category"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_spinner"/>
                        </LinearLayout>

                        <!-- Unit Spinner -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unit"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="4dp"/>

                            <Spinner
                                android:id="@+id/spUnit"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:entries="@array/product_units"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_spinner"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Freshness & Harvest Date (two per row) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:weightSum="2">

                        <!-- Freshness -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Freshness"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="4dp"/>

                            <Spinner
                                android:id="@+id/spFreshness"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:entries="@array/product_freshness"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_spinner"/>
                        </LinearLayout>

                        <!-- Harvest Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Harvest Date"
                                android:textSize="14sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="4dp"/>

                            <EditText
                                android:id="@+id/edtHarvestDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:cursorVisible="false"
                                android:clickable="true"
                                android:padding="12dp"
                                android:textColor="@color/black"
                                android:background="@drawable/rounded_edittext"/>
                        </LinearLayout>

                    </LinearLayout>


                    <!-- Product Description (full width) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Description"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="4dp"/>

                        <EditText
                            android:id="@+id/edtDescription"
                            android:hint="Product Description"
                            android:inputType="textMultiLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:background="@drawable/rounded_edittext"
                            android:layout_marginBottom="16dp"
                            android:textColor="@color/black"
                            android:minLines="3"/>

                    </LinearLayout>


                    <!-- Image Preview -->
                    <!-- Image Preview -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher"
                            android:background="@drawable/rounded_image"/>
                    </FrameLayout>

                    <Button
                        android:id="@+id/btnChooseImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose Image"
                        android:backgroundTint="#1877F2"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="12dp"
                        android:padding="12dp"
                        android:background="@drawable/rounded_button"/>
                    <Button
                        android:id="@+id/btnUpload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:backgroundTint="#42B72A"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/rounded_button"/>
                    <Button
                        android:id="@+id/btnBack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Back"
                        android:backgroundTint="#42B72A"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:background="@drawable/rounded_button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>